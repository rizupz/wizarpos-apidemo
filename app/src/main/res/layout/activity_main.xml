<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLACK"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="24dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="0.382"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_jianjie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#FFAAAAAA"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txt_jianjie"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:background="@drawable/txt_bg_shape"
                android:gravity="center"
                android:textColor="@color/WHITE"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#FFAAAAAA"
            android:gravity="center"
            android:padding="20dp" >

            <ListView
                android:id="@+id/lvw_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:divider="#FFFFFF"
                android:dividerHeight="8dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.618"
        android:background="#FFAAAAAA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/txt_bg_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:maxLines="100"
                android:padding="30dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@color/WHITE"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_selector"
                android:text="@string/clearlog"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.618"
                android:background="@drawable/txt_bg_shape"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/WHITE"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_selector"
                android:text="@string/uninstall"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>